@model CreateHomeViewModel

<form action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputHomeCategory">Выберите фото</label>
        <input type="file" class="form-control-file" asp-for="Images" multiple />
    </div>
    <div class="form-group">
        <label for="exampleInputHomeDescription">Описание</label>
        <input type="text" asp-for="Description" class="form-control" style="width:300px;" placeholder="Description">
    </div>
    <div class="form-group">
        <label for="exampleInputHomeBuildDate">Год постройки</label>
        <input type="date" asp-for="BuildDate" class="form-control" style="width:300px;" placeholder="Build Date">
    </div>
    <div class="form-group">
        <label for="exampleInputHomeAddress">Адрес дома</label>
        <input type="text" asp-for="Address" class="form-control" style="width:300px;" placeholder="Address">
    </div>
    <div class="form-group">
        <label for="exampleInputHomePrice">Цена</label>
        <input type="number" asp-for="Price" class="form-control" style="width:300px;" placeholder="Price">
    </div>
    <div class="form-group">
        <label for="exampleInputHomeRooms">Сколько комнот</label>
        <input type="number" asp-for="Rooms" class="form-control" style="width:300px;" placeholder="Rooms">
    </div>
    <div class="form-group">
        <label for="exampleInputHomeCity">Город</label>
        <select class="selectpicker" asp-for="CityId">
            @foreach (var city in Model.Cities)
            {
                <option value="@city.Key">@city.Value</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="exampleInputHomeCategory">Категория</label>
        <select class="selectpicker" asp-for="CategoryId">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Key">@category.Value</option>
            }
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Создать</button>
    </div>
</form>


@section Scripts {

    <script>
        $(document).ready(() => {
            $('select').select()

        });
    </script>
}